{
	"private": true,
	"name": "soyaendustriyel",
	"version": "0.0.0",
	"description": "Website of Soya End√ºstriyel",
	"license": "GPL-3.0",
	"homepage": "https://soyaendustriyel.com",
	"keywords": [],
	"author": "Kutsan Kaplan <me@kutsankaplan.com> (https://kutsankaplan.com)",
	"contributors": [
		"Reyhan Unal <rreyhanunal@gmail.com>"
	],
	"repository": "github:kutsan/soyaendustriyel.git",
	"bugs": {
		"url": "https://github.com/kutsan/soyaendustriyel/issues"
	},
	"scripts": {
		"prestart": "npm run lint && npm run test && npm run format",
		"prebuild": "npm run prestart",
		"start": "[[ $NODE_ENV == 'production' ]] && npm run build || NODE_ENV=development webpack-dev-server",
		"build": "rm -rf build/ && NODE_ENV=production webpack --progress",
		"deploy": "echo 'TODO: Write the deploy script.'",
		"lint": "npm run lint:eslint && npm run lint:stylelint",
		"lint:eslint": "eslint 'src/**/*.{js,jsx}'",
		"lint:stylelint": "stylelint 'src/**/*.css'",
		"test": "jest",
		"test:watch": "jest --watch --verbose",
		"test:coverage": "jest --watch --coverage",
		"format": "npm run format:csscomb && npm run format:prettier",
		"format:prettier": "prettier --loglevel='silent' --write \"src/**/*.{js,jsx,css,json}\"",
		"format:csscomb": "csscomb \"src/\""
	},
	"dependencies": {
		"firebase": "~7.14.0",
		"react": "~16.12.0",
		"react-dom": "~16.12.0",
		"react-router-dom": "~5.1.2"
	},
	"devDependencies": {
		"@babel/core": "~7.8.4",
		"@babel/preset-env": "~7.8.4",
		"@babel/preset-react": "~7.8.3",
		"@kutsan/config": "~0.2.0",
		"@svgr/webpack": "~5.3.0",
		"autoprefixer": "~9.7.5",
		"babel-eslint": "~10.0.3",
		"babel-loader": "~8.0.6",
		"copy-webpack-plugin": "~5.1.1",
		"css-loader": "~3.4.2",
		"csscomb": "~4.3.0",
		"cssnano": "~4.1.10",
		"eslint": "~6.8.0",
		"eslint-plugin-react": "~7.18.3",
		"eslint-plugin-react-hooks": "~3.0.0",
		"file-loader": "~6.0.0",
		"html-webpack-plugin": "~3.2.0",
		"husky": "~4.2.3",
		"jest": "~25.1.0",
		"lint-staged": "~10.1.2",
		"mini-css-extract-plugin": "~0.9.0",
		"postcss-loader": "~3.0.0",
		"prettier": "~1.19.1",
		"script-ext-html-webpack-plugin": "~2.1.4",
		"style-loader": "~1.1.3",
		"stylelint": "~13.3.0",
		"stylelint-config-standard": "~20.0.0",
		"terser-webpack-plugin": "~2.3.5",
		"webpack": "~4.41.6",
		"webpack-cli": "~3.3.11",
		"webpack-dev-server": "~3.10.3"
	},
	"husky": {
		"hooks": {
			"pre-commit": "lint-staged"
		}
	},
	"lint-staged": {
		"*.{js,jsx}": [
			"eslint",
			"prettier --write"
		],
		"*.css": [
			"stylelint",
			"csscomb --tty-mode --",
			"prettier --write"
		]
	}
}
